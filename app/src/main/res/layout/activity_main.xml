<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:gravity="center"
        tools:context=".MainActivity">

    <EditText
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/edtnama"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama"/>

    <Button
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnHello"
            android:text="Hello"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
    <Button
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnALert"
            android:text="Show Alert"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
    <Button
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSelector"
            android:text="Show selector"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
    <Button
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnsnackbar"
            android:text="Show Snack Bar"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
    <Button
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnprogresbar"
            android:text="Show Progress"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
    <Button
            android:fontFamily="sans-serif-smallcaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnsecondactivity"
            android:text="Pindah Activity"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>




</LinearLayout>